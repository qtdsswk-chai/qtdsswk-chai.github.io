    <title>日本行脚（二）</title>
    <link href="http://example.com/2024/02/05/%E6%97%A5%E6%9C%AC%E8%A1%8C%E8%84%9A%EF%BC%88%E4%BA%8C%EF%BC%89/"/>
    <id>http://example.com/2024/02/05/%E6%97%A5%E6%9C%AC%E8%A1%8C%E8%84%9A%EF%BC%88%E4%BA%8C%EF%BC%89/</id>
    <published>2024-02-05T04:03:10.000Z</published>
